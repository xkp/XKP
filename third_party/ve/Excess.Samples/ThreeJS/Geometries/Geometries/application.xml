<application id="Geometries" src="application.xs" title="Geometries">

  <resources>
    <!-- resources declaration -->
  </resources>

  <materials>
    <normal_material id="material_1"/>
  </materials>

  <scene>

    <camera id="camera_1" fov="65" aspect="1.5" near="1" far="1000">
      <position z="200"/>
    </camera>

    <sphere id="sphere1" radius="20" x_segments="32" y_segments="16" material="material_1"/>
    <tetrahedron id="tetra1" radius="20" material="material_1">
      <position x="-60"/>
    </tetrahedron>
    <plane id="plane1" width="40" height="40" material="material_1">
      <position x="60"/>
      <rotation x="90"/>
    </plane>
    <cube id="cube1" width="20" height="30" depth="20" material="material_1">
      <position y="-60"/>
    </cube>
    <icosahedron id="icosahedron1" radius="20" material="material_1">
      <position y="60"/>
    </icosahedron>
    <cylinder id="cylinder1" segments_radius="20" segments_height="20" top_radius="15" bottom_radius="20" height="30" material="material_1">
      <position y="60" x="60"/>
    </cylinder>
    <octahedron id="octa1" radius="20" material="material_1">
      <position x="-60" y="60"/>
    </octahedron>
    <torus id="torus1" radius="20" tube="10" x_segments="30" y_segments="20" material="material_1">
      <position x="-60" y="-60"/>
    </torus>
    <torusknot id="torusknot1" radius="20" tube="5" x_segments="60" y_segments="20" material="material_1">
      <position x="60" y="-60"/>
    </torusknot>
  </scene>

</application>