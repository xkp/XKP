<idiom id="winforms">

    <class id="component_position">
        <property id="x"      type="int"/>
        <property id="y"      type="int"/>
        <property id="width"  type="int"/>
        <property id="height" type="int"/>
    </class>
    
    <class id="component" output_id="System.Windows.Forms.Component">
        <accept_parent when="it.container" append="as_child"/>

        <property id="position" type="component_position"/>
        <property id="width"  output_id="Width"  type="int"/>
        <property id="height" output_id="Height" type="int"/>
        <property id="x"      output_id="X"      type="int"/>
        <property id="y"      output_id="Y"      type="int"/>
    </class>

    <class id="div" super="component" container="true" output_id="System.Windows.Forms.Panel" hasLayout="true" as_user_control="true">
	</class>

    <class id="button" super="component" output_id="System.Windows.Forms.Button">
        <property id="caption" type="string" output_id="Text" designer="true"/>
        
        <event id="click" output_id="Click" native_type="System.EventHandler" native_signature="object __sender, EventArgs __e"/>
    </class>

    <class id="Application">
        <accept_child type="component" append="independent"/>
    </class>
</idiom>