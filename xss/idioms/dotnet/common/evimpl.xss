<xss:parameter id="it"/>
<xss:parameter id="owner"/>

<xss:code>
//declares an event implementation
string impl_name;
if (it.instance)
    impl_name = it.instance.id + "_" + it.ev.id;
else
    impl_name = owner.id + "_" + it.ev.id;
    
it.impl_method = impl_name;

out()
{
	private void <xss:e v="impl_name"/>(<xss:e v="compiler.signature_to_string(it.ev.signature)"/>)
	<xss:open_brace/>
}

compiler.render_code(it.code);

out()
{
	<xss:close_brace/>
}
</xss:code>
