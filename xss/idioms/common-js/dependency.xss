<xss:parameter id="it"/>
<xss:parameter id="path"/>
<xss:code>
    string href = it.href;
    if (path)
        href = path + "/" + href;
    
    if (it.stylesheet)
    {
        compiler.log("RENDERING STYLE SHEET");
        out()
        {
            <link rel="stylesheet" href="<xss:e v="href"/>"></link>
        }
    }
    else
    {
        out()
        {
            <script type="text/javascript" src="<xss:e v="href"/>"></script>
        }
    }
</xss:code>
