<xss:parameter id="obj"/>
<xss:parameter id="type"/>	

<xss:code>
	if(!type)
		type = obj.type;
		
	if(obj.class_name == "firstperson_controls")
	{
		out(){
			<xss:e v="obj.id"/> = new THREE.FirstPersonControls( <xss:e v="obj.parent.id"/> );
			manager.events.addListener("update", function()
			{				
				<xss:e v="obj.id"/>.update( c_delta );
			})
		}		
	}
	else
	{
		out()
		{
		    <xss:e v="obj.id"/> = 
		    <xss:e v="compiler.instantiate(obj)"/> ;	
		}		
	}	
</xss:code>
