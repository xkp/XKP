<module id="ui" src="ui.xs">
    <types>
        <class id="component">
            <property id="x" type="int" dont_init="true">
                <get text="x"/>
                <set text="set_x({value})"/>
            </property>

            <property id="y" type="int" dont_init="true">
                <get text="y"/>
                <set text="set_y({value})"/>
            </property>

            <property id="rotation" type="float">
                <get text="rotation"/>
                <set text="set_rotation({value})"/>
            </property>

            <property id="width" type="int" dont_init="true">
                <get text="get_width()"/>
                <set text="set_width({value})"/>
            </property>

            <property id="height" type="int">
                <get text="get_height()"/>
                <set text="set_height({value})"/>
            </property>

            <property id="count" type="int" dont_init="true">
                <get text="count()"/>
            </property>

            <property id="visible" type="bool">
                <get text="isVisible()"/>
                <set text="setVisible({value})"/>
            </property>

            <property id="alpha" type="float">
                <get text="get_alpha()"/>
                <set text="alpha({value})"/>
            </property>
        </class>

        <class id="div" super="component" creation_function="newComponent">
        </class>

        <class id="img" super="component" creation_function="newImage">
            <array id="constructor_params">
                <parameter property="src"/>
            </array>

            <property id="src" type="string">
                <set text="src({value})"/>
            </property>

            <property id="image" type="object">
                <set text="image({value})"/>
            </property>
        </class>

        <class id="button" super="component" creation_function="newButton">
            <array id="constructor_params">
                <parameter property="up"/>
                <parameter property="down"/>
            </array>
            
            <property id="up"   type="string" dont_init="true"/>
            <property id="down" type="string" dont_init="true"/>
        </class>

        <class id="state_button" super="component" creation_function="newStateButton">
            <array id="constructor_params">
                <parameter property="up"/>
                <parameter property="down"/>
            </array>
        </class>

        <class id="label" super="component" creation_function="newLabel">
            <array id="constructor_params">
                <parameter property="font"/>
            </array>

            <property id="font" type="string" dont_init="true">
                <get text="font()"/>
                <set text="font({value})"/>
            </property>

            <property id="caption" type="string">
                <get text="text()"/>
                <set text="text({value})"/>
            </property>
        </class>

        <class id="progress_bar" super="component" creation_function="newProgressBar">
            <property id="value" type="int">
                <get text="get_value()"/>
                <set text="value({value})"/>
            </property>
        </class>

        <class id="switch" super="component" creation_function="newSwitch">
            <property id="active" type="int">
                <get text="get_active()"/>
                <set text="active({value})"/>
            </property>
        </class>

        <class id="line" super="component" creation_function="newLine">
            <property id="x1" type="float">
                <get text="x1"/>
                <set text="set_x1({value})"/>
            </property>

            <property id="x2" type="float">
                <get text="x2"/>
                <set text="set_x2({value})"/>
            </property>

            <property id="y1" type="float">
                <get text="y1"/>
                <set text="set_y1({value})"/>
            </property>

            <property id="y2" type="float">
                <get text="y2"/>
                <set text="set_y2({value})"/>
            </property>

            <property id="lineWidth"  type="float">
                <get text="lineWidth"/>
                <set text="set_lineWidth({value})"/>
            </property>
            
            <property id="lineCap" type="string" set_fn="set_lineCap">
                <get text="lineCap"/>
                <set text="set_lineCap({value})"/>
            </property>
        </class>
    </types>
</module>