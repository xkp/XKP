<module id="ui" src="ui.xs">
    <types>
        <class id="component" renderer="component.xss">
            <property id="x" type="int" dont_init="true">
                <get text="x"/>
                <set text="set_x({value})"/>
            </property>

            <property id="y" type="int" dont_init="true">
                <get text="y"/>
                <set text="set_y({value})"/>
            </property>

            <property id="rotation" type="float">
                <get text="get_rotation()"/>
                <set text="set_rotation({value})"/>
            </property>

            <property id="width" type="int" dont_init="true">
                <get text="get_width()"/>
                <set text="set_width({value})"/>
            </property>

            <property id="height" type="int" dont_init="true">
                <get text="get_height()"/>
                <set text="set_height({value})"/>
            </property>

            <property id="count" type="int" dont_init="true">
                <get text="count()"/>
            </property>

            <property id="visible" type="bool">
                <get text="isVisible()"/>
                <set text="setVisible({value})"/>
            </property>

            <property id="alpha" type="float">
                <get text="get_alpha()"/>
                <set text="alpha({value})"/>
            </property>
        </class>

		<class id="self_drawn" super="component" output_id="ms.ui.SelfDrawn"/>
		
		<class id="clip_area" super="component" output_id="ms.ui.ClipArea">
			<constructor_params>
                <parameter property="form" runtime="true"/>
            </constructor_params>

            <property id="form" type="string"/>                
		</class>
		
		<class id="sprite_sheet" super="component" output_id="ms.ui.SpriteSheet">
			<constructor_params>
                <parameter property="src" runtime="true"/>
				<parameter property="frame_width" runtime="true"/>
				<parameter property="frame_height" runtime="true"/>						
            </constructor_params>
            <property id="src" type="string" dont_init="true"/> 
			<property id="frame_width" type="int" dont_init="true"/>
			<property id="frame_height" type="int" dont_init="true"/>						
		</class>
		
		<class id="sprite" renderer="sprite_renderer.xss"/>
		
		<class id="rectangle" super="component" output_id="ms.ui.Rectangle">
			<constructor_params>
                <parameter property="fill" runtime="true"/>
				<parameter property="stroke" runtime="true"/>
				<parameter property="line_width" runtime="true"/>
            </constructor_params>

            <property id="fill" type="string" dont_init="true">
				<get text="fill"/>
                <set text="set_fill({value})"/>
			</property>
			<property id="stroke" type="string" dont_init="true">
				<get text="stroke"/>
                <set text="set_stroke({value})"/>
			</property>
			<property id="line_width" type="int" dont_init="true">
				<get text="line_width"/>
                <set text="set_line_width({value})"/>
			</property>
		</class>
		
		<class id="polygon" super="component" output_id="ms.ui.Polygon">
			<constructor_params>
                <parameter property="fill" runtime="true"/>
				<parameter property="stroke" runtime="true"/>
				<parameter property="line_width" runtime="true"/>
            </constructor_params>

            <property id="fill" type="string" dont_init="true">
				<get text="fill"/>
                <set text="set_fill({value})"/>
			</property>
			<property id="stroke" type="string" dont_init="true">
				<get text="stroke"/>
                <set text="set_stroke({value})"/>
			</property>
			<property id="line_width" type="int" dont_init="true">
				<get text="line_width"/>
                <set text="set_line_width({value})"/>
			</property>
		</class>
		
		<class id="polygon_point" renderer="path_renderer.xss"/>
		
		<class id="circle" super="component" output_id="ms.ui.Circle">
			<constructor_params>
                <parameter property="fill" runtime="true"/>
				<parameter property="stroke" runtime="true"/>
				<parameter property="line_width" runtime="true"/>									
            </constructor_params>

            <property id="fill" type="string" dont_init="true">
				<get text="fill"/>
                <set text="set_fill({value})"/>
			</property>
			<property id="stroke" type="string" dont_init="true">
				<get text="stroke"/>
                <set text="set_stroke({value})"/>
			</property>
			<property id="line_width" type="int" dont_init="true">
				<get text="line_width"/>
                <set text="set_line_width({value})"/>
			</property>
			<property id="radius" type="int">
				<get text="get_radius()"/>
				<set text="set_radius({value})"/>
			</property>
		</class>
		
        <class id="div" super="component" output_id="ms.ui.Component">
        </class>

        <class id="img" super="component" output_id="ms.ui.Image">
            <constructor_params>
                <parameter property="src" runtime="true"/>
            </constructor_params>

            <property id="src" type="string" dont_init="true">
                <get text="src()"/>
                <set text="src({value})"/>
            </property>

            <property id="image" type="object">
                <set text="image({value})"/>
            </property>
        </class>

        <class id="button" super="component" output_id="ms.ui.Button">
            <constructor_params>
                <parameter property="up" runtime="true"/>
                <parameter property="down" runtime="true"/>
            </constructor_params>
            
            <property id="up"   type="string" dont_init="true"/>
            <property id="down" type="string" dont_init="true"/>
        </class>

        <class id="state_button" super="component" output_id="ms.ui.StateButton">
            <constructor_params>
                <parameter property="active" runtime="true"/>
                <parameter property="inactive" runtime="true"/>
            </constructor_params>
			
			<property id="active"   type="string" dont_init="true"/>
            <property id="inactive" type="string" dont_init="true"/>
        </class>

        <class id="label" super="component" output_id="ms.ui.Label">
            <constructor_params>
                <parameter property="font" runtime="true"/>
            </constructor_params>

            <property id="font" type="string" dont_init="true">
                <get text="font()"/>
                <set text="font({value})"/>
            </property>

            <property id="caption" type="string">
                <get text="text()"/>
                <set text="text({value})"/>
            </property>
			
			<property id="color" type="string" use_plain_value="true">
                <get text="color"/>
                <set text="set_color({value})"/>
            </property>
			
        </class>

        <class id="progress_bar" super="component" output_id="ms.ui.ProgressBar">
            <constructor_params>
                <parameter property="images" runtime="true"/>
            </constructor_params>
			<property id="images" type="string"/>
			<property id="value" type="int">
                <get text="get_value()"/>
                <set text="value({value})"/>
            </property>
        </class>

        <class id="switch" super="component" output_id="ms.ui.Switch">
            <property id="active" type="int">
                <get text="get_active()"/>
                <set text="active({value})"/>
            </property>
        </class>

        <class id="line" super="component" output_id="ms.ui.Line">
            <property id="x1" type="float">
                <get text="x1"/>
                <set text="set_x1({value})"/>
            </property>

            <property id="x2" type="float">
                <get text="x2"/>
                <set text="set_x2({value})"/>
            </property>

            <property id="y1" type="float">
                <get text="y1"/>
                <set text="set_y1({value})"/>
            </property>

            <property id="y2" type="float">
                <get text="y2"/>
                <set text="set_y2({value})"/>
            </property>

            <property id="lineWidth"  type="float">
                <get text="lineWidth"/>
                <set text="set_lineWidth({value})"/>
            </property>
            
            <property id="lineCap" type="string">
                <get text="lineCap"/>
                <set text="set_lineCap({value})"/>
            </property>
        </class>
		
		<class id="sound" renderer="audio_renderer.xss">
            <property id="src"  type="string" runtime="true"/>
			<property id="play" type="bool"/>
        </class>
		
		<class id="video" renderer="video_renderer.xss">
            <property id="src"        type="string"/>
            <property id="loop"       type="bool"/>
            <property id="controls"   type="bool"/>
            <property id="autoplay"   type="bool"/> 
			<property id="audio"      type="bool"/>
			<property id="width"      type="bool"/>
			<property id="height"     type="bool"/>
        </class>
		
    </types>
</module>