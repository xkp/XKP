<module id="ui" src="ui.xs">
    <types>
        <class id="component">
            <property id="x"       type="int"                       set_fn="set_x"      dont_init="true"/>
            <property id="y"       type="int"                       set_fn="set_y"      dont_init="true"/>
            <property id="width"   type="int"   get_fn="get_width"  set_fn="set_width"  dont_init="true"/>
            <property id="height"  type="int"   get_fn="get_height" set_fn="set_height" dont_init="true"/>
            <property id="count"   type="int"   get_fn="count"                          dont_init="true"/>
            <property id="visible" type="bool"  get_fn="isVisible"  set_fn="setVisible"/>
            <property id="alpha"   type="float" get_fn="get_alpha"  set_fn="alpha"/>
        </class>

        <class id="div" super="component" creation_function="newComponent">
        </class>

        <class id="img" super="component" creation_function="newImage">
            <array id="constructor_params">
                <parameter property="src"/>
            </array>

            <property id="src"   type="string" get_fn="write_only" set_fn="src"/>
            <property id="image" type="object" get_fn="write_only" set_fn="image"/>
        </class>

        <class id="button" super="component" creation_function="newButton">
            <array id="constructor_params">
                <parameter property="up"/>
                <parameter property="down"/>
            </array>
            
            <property id="up"   type="string" dont_init="true"/>
            <property id="down" type="string" dont_init="true"/>
        </class>

        <class id="state_button" super="component" creation_function="newStateButton">
            <array id="constructor_params">
                <parameter property="up"/>
                <parameter property="down"/>
            </array>
        </class>

        <class id="label" super="component" creation_function="newLabel">
            <array id="constructor_params">
                <parameter property="font"/>
            </array>
            <property id="font" type="string" set_fn="font" get_fn="font" dont_init="true"/>
            <property id="caption" type="string" set_fn="text" get_fn="text"/>
        </class>

        <class id="progress_bar" super="component" creation_function="newProgressBar">
            <property id="value" type="int" set_fn="value" get_fn="get_value"/>
        </class>

        <class id="switch" super="component" creation_function="newSwitch">
            <property id="active" type="int" set_fn="active" get_fn="get_active"/>
        </class>

        <class id="line" super="component" creation_function="newLine">
            <property id="x1"         type="float"  set_fn="set_x1"/>
            <property id="x2"         type="float"  set_fn="set_x2"/>
            <property id="y1"         type="float"  set_fn="set_y1"/>
            <property id="y2"         type="float"  set_fn="set_y2"/>
            <property id="lineWidth"  type="float"  set_fn="set_lineWidth"/>
            <property id="lineCap"    type="string" set_fn="set_lineCap"/>
        </class>
    </types>
</module>