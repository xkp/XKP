<xss:code>
	array<int> numbers = [1, 2, 3, 4, 5, 6];
	for(var item in numbers)
	{
		int c = item / 2;
		int r = item - c * 2;
		
		//implement module operator
		//if(item % 2 == 0)
		if(r == 0)
		{
			out(marker="after", marker="before_zero")
			{
				Even = <xss:e value="item"/>
			}
		}
		else
		{
			out(marker="before")
			{
				Odd = <xss:e value="item"/>
			}
