<application name="jq6" title="Good stuff" src="jquery6.xs" template="jq6_template.html">
    <accordion id="acc1" html_id="sidebar" height="490" fillSpace="true">
        <div caption="Brightness">
            <label caption="Level"/>     <br/> <br/>
            <slider id="brightness"/>    <br/>
            <label caption="Constrast"/> <br/> <br/>
            <slider id="constrast" value="50"/>
        </div>
        <div caption="Color">
            <label caption="Red"/>  <br/><br/>
            <slider id="red" min="-100" max="100" value="0"/>
            <br/>
            <label caption="Blue"/> <br/><br/>
            <slider id="blue" min="-100" max="100" value="0"/>
            <br/>
            <label caption="Green"/><br/><br/>
            <slider id="green" min="-100" max="100" value="0"/>
        </div>
        <div caption="HSL">
            <label caption="Hue"/> <br/> <br/>
            <slider id="hue" min="-180" max="180" value="0"/>           
            <br/>
            <label caption="Saturation"/><br/> <br/>
            <slider id="saturation" min="-100" max="100" value="0"/>    
            <br/>
            <label caption="Lightness"/> <br/> <br/>
            <slider id="lightness" min="-100" max="100" value="0"/>
        </div>
        <div caption="Noise">
            <label caption="Amount"/>  <br/> <br/>
            <slider id="noise_amount"/>      <br/>
            <label caption="Strength"/><br/> <br/>
            <slider id="noise_strength"/>    <br/>
            <br/>
            <checkbox id="mono" caption="Mono"/>
        </div>
        <div caption="Blur">
            <button id="blur_apply" caption="Apply"/>
        </div>
    </accordion>
    
    <canvas id="image_container" width="605" height="375" html_id="target-container" />

    <preset id="transformer">
        <brightness id="b_filter" brightness="50" contrast="0.5"/>
        <hsl id="hsl_filter" hue="40"/>
        <coloradjust id="c_filter"/>
        <noise id="n_filter"/>
        <blur id="blur_filter"/>
    </preset>
</application>
