<application src="ui_demo.app.xs" width="600" height="600">
    <resources>
        <image src="images/progress.full.png"/>
        <image src="images/progress.empty.png"/>
        <image src="images/smile_grin_48.png"/>
        <image src="images/smile_sad_48.png"/>
        <image src="images/arrow_left.png"/>
        <image src="images/arrow_right.png"/>
        <image src="images/arrow_right_48.png"/>
        <image src="images/arrow_right_green_48.png"/>
        <image src="images/arrow_left_48.png"/>
        <image src="images/arrow_left_green_48.png"/>
    </resources>

    <switch id="main" x="0" y="0" width="600" height="250">
        <div id="test1">
			<label id="lbl0" x="240" y="75" font="Verdana" caption="use arrows to move smile"/>
            <label id="lbl1" x="270" y="200" rotation="-15" font="Verdana" caption="click smiley"/>
            <button id="btn1" placement="center" rotation="15" width="50" height="50" up="images/smile_sad_48.png" down="images/smile_grin_48.png"/>
        </div>
        <div id="test2">
            <progress_bar id="pb1" placement="center" width="150" height="10"/>
            <img id="btn2" x="200" y="115" width="20" height="20" src="images/arrow_left.png"/>
            <img id="btn3" x="380" y="115" width="20" height="20" src="images/arrow_right.png"/>
            <label id="lbl2" x="210" y="200" font="Verdana" rotation="15" caption="click small arrows to adjust percentage"/>
        </div>
    </switch>
    <button id="btnNext" x="320" y="300" width="100" height="50" up="images/arrow_right_green_48.png" down="images/arrow_right_48.png"/>
    <button id="btnPrev" x="220" y="300" rotation="45" width="50" height="50" up="images/arrow_left_green_48.png" down="images/arrow_left_48.png"/>
    <state_button id="stateBtn" x="270" y="400" rotation="-45" width="50" height="50" active="images/smile_grin_48.png" inactive="images/smile_sad_48.png"/>
	<label id="lbl3" x="330" y="440" font="Verdana" caption="this smile is a state button, click it"/>
</application>
