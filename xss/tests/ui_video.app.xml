<application width="800" height="600" src="ui_video.xs">    
	
	<resources>	
		<image src="images/stop.png"/>
		<image src="images/pause.png"/> 
		<image src="images/play_over.png"/>
        <image src="images/stop_over.png"/>
		<image src="images/pause_over.png"/>
		<image src="images/play.png"/>
		<image src="images/pause.png"/>
		<image src="images/minus.png"/>
		<image src="images/plus.png"/>
		<image src="images/rota_left.png"/>
		<image src="images/rota_right.png"/>
		<image src="images/sound_on.png"/>
        <image src="images/sound_off.png"/>
		<video src="video/sintel.mp4"/>
	 </resources>
	 
    <vid id="v" src="video/sample_mpeg4.mp4" x="50" y="50" width="400" height="200"/>
	
	<label id="lbl1" x="40" y="300" font="Verdana" caption="Volume controls"/>
    <img id="btnVolUp" x="20" y="320" width="30" height="30" src="images/plus.png"/>
    <img id="btnVolDown" x="60" y="320" width="30" height="30" src="images/minus.png"/>
	<state_button id="btnMute" x="100" y="320" width="30" height="30" active="images/sound_on.png" inactive="images/sound_off.png"/>

	<label id="lbl2" x="200" y="300" font="Verdana" caption="Playback controls"/>	
	<button id="btnPlay" x="180" y="315" width="40" height="40" up="images/play.png" down="images/play_over.png"/>
    <button id="btnPause" x="220" y="315" width="40" height="40" up="images/pause.png" down="images/pause_over.png"/>
    <button id="btnStop" x="260" y="315" width="40" height="40" up="images/stop.png" down="images/stop_over.png"/>
	
	<label id="lbl3" x="360" y="300" font="Verdana" caption="Rotation controls"/>	
	<img id="btnRotLeft" x="365" y="320" width="30" height="30" src="images/rota_left.png"/>
    <img id="btnRotRight" x="405" y="320" width="30" height="30" src="images/rota_right.png"/>
    	
</application>
