<application src="wgl_icosahedron.xs" title="Test 3D">

	<materials>	
	
		<lambert_material id="mat_1" color="Math.random() * 0xffffff"/>
		<lambert_material id="mat_2" color="Math.random() * 0xffffff"/>
		<lambert_material id="mat_3" color="Math.random() * 0xffffff"/>
		
	</materials>	
	
	<scene>	
	
		<camera id="camera_1" fov="40" aspect="1.5" near="1" far="10000">
			<position z="1800"/>			
		</camera>
			
		<icosahedron id="icosahedron_1" subdivisions="1" material="mat_1">			
			<position x="-450"/>
			<scale x="200" y="200" z="200"/>
		</icosahedron>
		
		<icosahedron id="icosahedron_2" subdivisions="1" material="mat_2">			
			<scale x="200" y="200" z="200"/>
		</icosahedron>
		
		<icosahedron id="icosahedron_3" subdivisions="1" material="mat_3">			
			<position x="450"/>
			<scale x="200" y="200" z="200"/>
		</icosahedron>		
		
	</scene>
			
</application>
