<application src="ui_audio.xs" width="600" height="400">
    <resources>
        <image src="images/progress.full.png"/>
        <image src="images/progress.empty.png"/>
        <image src="images/play.png"/>
        <image src="images/stop.png"/>
		<image src="images/pause.png"/> 
		<image src="images/play_over.png"/>
        <image src="images/stop_over.png"/>
		<image src="images/pause_over.png"/>
        <image src="images/arrow_left.png"/>
        <image src="images/arrow_right.png"/>
		<image src="images/sound_2.png"/>
		<image src="images/sound_1.png"/>
		<audio src="sounds/applauselong.wav"/>
		<audio src="sounds/forest.wav"/>
    </resources>

	<label id="lbl1" x="220" y="190" font="Verdana" caption="click the sound you want to listen"/>
    <button id="btnSound1" x="275" y="210" width="50" height="10" up="images/sound_2.png" down="images/sound_2.png"/>
    <button id="btnSound2" x="275" y="240" width="50" height="10" up="images/sound_1.png" down="images/sound_1.png"/>
       
    <progress_bar id="volume_bar" x="225" y="120" value="50" width="150" height="10"/>
    <img id="btn1" x="200" y="115" width="20" height="20" src="images/arrow_left.png"/>
    <img id="btn2" x="380" y="115" width="20" height="20" src="images/arrow_right.png"/>
    <label id="lbl3" x="220" y="100" font="Verdana" caption="click small arrows to adjust volume"/>
   	
    <button id="btnPlay" x="175" y="300" width="50" height="50" up="images/play.png" down="images/play_over.png"/>
    <button id="btnPause" x="275" y="300" width="50" height="50" up="images/pause.png" down="images/pause_over.png"/>
    <button id="btnStop" x="375" y="300" width="50" height="50" up="images/stop.png" down="images/stop_over.png"/>

	<sound id="sound_1" src="sounds/forest.wav" loop="false"/>
	<sound id="sound_2" src="sounds/applauselong.wav"/>
	
</application>
