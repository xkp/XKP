<application src="jseq1.app.xs">
    <sequence id="test_sequence" auto_start="true">
        <every t="0.3">
            <run method="display"/>
        </every>
        
        <at time="0">
            <animate property="application.target" from="@" to="0.3" in="3"/>
        </at>
        
        <at time="3">
            <animate property="application.target" from="0.3" to="10" in="2"/>
        </at>
        
        <at time="5">
            <animate property="application.target" from="10" to="10000" in="10"/>
        </at>
        
        <when expr="application.target > 5000">
            <run method="switch_sequence"/>
        </when>
    </sequence>

    <sequence id="test_sequence1">
        <at time="0">
            <animate property="app.target" from="0" to="0.3" in="3"/>
        </at>
    </sequence>
</application>
