<application src="box2d2.app.xs" width="600" height="400">
    <physics_world id="myWorld" debug_draw="true"
                   gravity_y   = "10"
                   scale       = "30" 
                   friction    = "0.5"
                   density     = "1.0"
                   restitution = "0.2"/>

    <resources>
        <image src="images/smile_grin_48.png"/>
        <image src="images/smile_sad_48.png"/>
        <image src="images/stone-12.jpg"/>
    </resources>

    <button id="btn1" x="200" y="200" rotation="0.2" width="50" height="50" up="images/smile_sad_48.png" down="images/smile_grin_48.png">
        <physics body_type="dynamic" shape="circle"/>
    </button>

    <img id="floor" src="images/stone-12.jpg" x="0" y="390" width="600" height="40">
        <physics body_type="static" shape="rect"/>
    </img>
</application>
