<application src="cameras.xs" title="Test 3D" renderer="webgl" background="#867">

	<resources>	
	
		<lambert_material id="material_sphere1" color="Math.random() * 0xffffff" shading="THREE.FlatShading"/>	
		<lambert_material id="material_sphere2" color="Math.random() * 0xffffff" shading="THREE.FlatShading"/>
		<lambert_material id="material_wireframe" color="16755400" wireframe="true" wireframe_linewidth="1"/>
		<lambert_material id="cylinder_material" color="Math.random() * 0xffffff" shading="THREE.FlatShading"/>
		<lambert_material id="cylinder1_material" color="Math.random() * 0xffffff" shading="THREE.FlatShading"/>
		<lambert_material id="cube_material" color="Math.random() * 0xffffff" shading="THREE.FlatShading"/>
		<lambert_material id="cube1_material" color="Math.random() * 0xffffff" shading="THREE.FlatShading"/>

	</resources>
	
	<scene>	
	
		<quake_camera id="camera_1" fov="50" aspect="1.5" near="1" far="10000" 
					movement_speed="70" look_speed="0.05" no_fly="true" look_vertical="false">		
			<position x="-250" y="25"/>			
		</quake_camera>
		
		<camera id="camera_2" fov="50" aspect="1.5" near="1" far="10000">					
			<position x="-250" y="25"/>			
		</camera>
		
		<directional_light id="light" hex="16777215">
			<position y="0.5" z="1"/>
		</directional_light>
		
		
		<sphere id="sphere_1" radius="20" segments_width="32" segments_height="16" material="material_sphere1">			
			<position x="250" y="30"/>	
		</sphere>
		
		<sphere id="sphere_2" radius="20" segments_width="32" segments_height="16" material="material_sphere2">	
			<position x="-250" y="30"/>	
		</sphere>
		
		<cylinder id="cylinder_1" numsegs="20" toprad="10" botrad="10" height="50" material="cylinder_material">
			<rotation x="10" y="10"/>
			<position x="100" y="30" z="100"/>
		</cylinder>	
		
		<cylinder id="cylinder_2" numsegs="20" toprad="10" botrad="10" height="50" material="cylinder1_material">
			<rotation x="10" y="10"/>
			<position x="-100" y="30" z="100"/>
		</cylinder>
		
		<cube id="cube_1" width="30" height="30" depth="30" material="cube_material">			
			<position x="-100" y="30" z="-100"/>
			<rotation x="10" y="10"/>
		</cube>
		
		<cube id="cube_2" width="30" height="30" depth="30" material="cube1_material">			
			<position x="100" y="30" z="-100"/>
			<rotation x="10" y="10"/>
		</cube>
		
		<plane id="plane_1" width="1000" height="1000" segments_width="100" segments_height="100" material="material_wireframe">
			<position y="0.1"/>
			<rotation x="-1.57"/>
		</plane>		
		
	</scene>
			
</application>
