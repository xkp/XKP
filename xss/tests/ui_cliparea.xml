<application src="ui_cliparea.xs" width="600" height="600">
    <resources>
        <image src="images/smile_grin_48.png"/>
        <image src="images/smile_sad_48.png"/>        
    </resources>

	<div id="div1" x="150" y="0" width="400" height="200">
		<clip_area id="ca1" x="90" y="60" width="100" height="120" form="rect"/>
		<label x="40" y="75" font="Verdana" caption="use arrows to move the clip area"/>
		<label id="lbl1" x="100" y="90" font="Verdana" caption="click smiley"/>
		<clip_area id="ca2" x="100" y="60" width="100" height="100" form="circle"/>
		<button id="btn1" x="90" y="100" rotation="10" width="50" height="50" up="images/smile_sad_48.png" down="images/smile_grin_48.png"/>		
		<button id="btn2" x="150" y="100" rotation="10" width="50" height="50" up="images/smile_sad_48.png" down="images/smile_grin_48.png"/>		
	</div>
	
	<state_button id="stateBtn" x="270" y="200" rotation="-45" width="50" height="50" active="images/smile_grin_48.png" inactive="images/smile_sad_48.png"/>
	<label id="lbl3" x="330" y="240" font="Verdana" caption="this smile is a state button, click it"/>
	
</application>
