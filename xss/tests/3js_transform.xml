<application src="3js_transform.xs" title="Test 3D" renderer="canvas" background="FloralWhite">

	<materials>	
	
		<basic_material id="cylinder_material" color="Math.random() * 0xffffff"/>
		<basic_material id="cube_material" color="Math.random() * 0xffffff"/>
		<normal_material id="sphere_material"/>
		
	</materials>
	
	<label id="lbl0" x="240" y="75" font="12px Verdana" caption="Move mouse over the scene to rotate the cylinder"/>
	<label id="lbl1" x="240" y="100" font="12px Verdana" caption="While pressing SHIFT the transform node will be rotated"/>
	<label id="lbl2" x="240" y="125" font="12px Verdana" caption="While pressing CTRL the camera will be rotated horizontally"/>
	
	<scene>	
	
		<camera id="camera_1" fov="75" aspect="1.5" near="1" far="3000">
			<position z="1000"/>			
		</camera>
		
		<directional_light id="light" color="Ivory">
			<position y="0.5" z="1"/>
		</directional_light>
		
		<cylinder id="cylinder_1" segments="200" top_radius="100" bottom_radius="100" height="500" material="cylinder_material">
			<rotation x="70" y="70"/>
			<position x="600"/>
		</cylinder>		
		
		<transform id="container">	
		
			<cube id="cube_1" width="300" height="300" depth="300" material="cube_material">			
				<position x="-600" y="-100"/>
				<rotation x="70" y="70"/>
			</cube>
		
			<sphere id="sphere_1" radius="200" x_segments="20" y_segments="20" material="sphere_material">			
				<position x="-400" y="400"/>           
			</sphere>
					
		</transform>	
		
	</scene>
			
</application>

