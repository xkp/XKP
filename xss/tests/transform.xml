<application src="transform.xs" title="Test 3D" renderer="canvas" background="#f0f0f0">

	<resources>	
	
		<basic_material id="cylinder_material" color="Math.random() * 0xffffff"/>
		<basic_material id="cube_material" color="Math.random() * 0xffffff"/>
		<normal_material id="sphere_material"/>
		
	</resources>
	
	<scene>	
	
		<camera id="camera_1" fov="75" aspect="1.5" near="1" far="3000">
			<position z="1000"/>			
		</camera>
		
		<directional_light id="light" hex="1677">
			<position y="0.5" z="1"/>
		</directional_light>
		
		<cylinder id="cylinder_1" numsegs="200" toprad="100" botrad="100" height="500" material="cylinder_material">
			<rotation x="10" y="10"/>
			<position x="600"/>
		</cylinder>		
		
		<transform id="container">	
		
			<cube id="cube_1" width="300" height="300" depth="300" material="cube_material">			
				<position x="-600" y="-100"/>
				<rotation x="10" y="10"/>
			</cube>
		
			<sphere id="sphere_1" radius="200" segments_width="20" segments_height="20" material="sphere_material">			
				<position x="-400" y="400"/>           
			</sphere>
					
		</transform>	
		
	</scene>
			
</application>

