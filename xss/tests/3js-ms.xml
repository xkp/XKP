<application src="3js-ms.xs" title="Test 3D" background="FloralWhite">

	<materials>	
	
		<basic_material id="cylinder_material" color="Math.random() * 0xffffff"/>
				
	</materials>
	
	<label id="lbl0" x="240" y="75" font="12px Verdana" caption="Click the cylinder to animate it"/>
	
	<scene>	
	
		<camera id="camera_1" fov="75" aspect="1.5" near="1" far="3000">
			<position z="500"/>			
		</camera>
		
		<directional_light id="light" color="1677">
			<position y="0.5" z="1"/>
		</directional_light>
		
		<cylinder id="cylinder_1" segments_radius="50" segments_height="50" top_radius="150" bottom_radius="100" height="200" material="cylinder_material">
			<rotation x="30"/>	
		</cylinder>		
		
		<move_anim id="anim_1"/>
		<fade_anim id="fade_1"/>
		
	</scene>
			
</application>

