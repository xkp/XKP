<application src="3js-ms.xs" title="Test 3D" renderer="canvas" background="FloralWhite">

	<materials>	
	
		<basic_material id="cylinder_material" color="Math.random() * 0xffffff"/>
				
	</materials>
	
	<scene>	
	
		<camera id="camera_1" fov="75" aspect="1.5" near="1" far="3000">
			<position z="1000"/>			
		</camera>
		
		<directional_light id="light" color="1677">
			<position y="0.5" z="1"/>
		</directional_light>
		
		<cylinder id="cylinder_1" segments="200" top_radius="100" bottom_radius="100" height="500" material="cylinder_material">
			<rotation x="10" y="10"/>			
		</cylinder>		
		
		<move_anim id="anim_1"/>
		<fade_anim id="fade_1"/>
		
	</scene>
			
</application>

