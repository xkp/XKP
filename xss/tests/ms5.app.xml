<application src="ms5.app.xs" width="600" height="400">
    <resources>
        <image src="images/progress.full.png"/>
        <image src="images/progress.empty.png"/>
        <image src="images/smile_grin_48.png"/>
        <image src="images/smile_sad_48.png"/>
        <image src="images/arrow_down_green_48.png"/>
        <image src="images/arrow_right_48.png"/>
        <image src="images/arrow_right_green_48.png"/>
        <image src="images/arrow_left_48.png"/>
        <image src="images/arrow_left_green_48.png"/>
    </resources>

    <switch id="main" x="0" y="0" width="600" height="300">
        <div id="test1">
            <label id="lbl1" x="50" y="40" font="Verdana" caption="click button"/>
            <button id="btn1" placement="center" width="50" height="50" up="images/smile_sad_48.png" down="images/smile_grin_48.png"/>
        </div>
        <div id="test2">
            <progress_bar id="pb1" placement="center" width="150" height="10"/>
            <button id="btn3" x="250" y="210" width="50" height="50" up="images/arrow_down_green_48.png" down="images/arrow_down_green_48.png"/>
        </div>
        <div id="test3">
            <line id="ln1" x1="0" y1="0" x2="300" y2="40"/>
        </div>
    </switch>
    <button id="btnNext" x="250" y="300" width="50" height="50" up="images/arrow_right_green_48.png" down="images/arrow_right_48.png"/>
    <button id="btnPrev" x="300" y="300" width="50" height="50" up="images/arrow_left_green_48.png" down="images/arrow_left_48.png"/>
</application>
