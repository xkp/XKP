        <image src="images/smile_grin_48.png"/>
        <image src="images/smile_sad_48.png"/>        
    </resources>

	<div id="div1" x="0" y="0" width="400" height="200">
		<circle id="c1" x="100" y="60" radius="100" afill="cyan" stroke="black" line_width="5"/>
		<rectangle id="r1" x="200" y="200" width="100" height="150" rotation="-0.2" aalpha="0.6" fill="green"/>
		<polygon id="p1" fill="pink" stroke="brown" line_width="3" alpha="0.4">
			<path_point x="270" y="300"/>
