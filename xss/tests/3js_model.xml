<application src="3js_model.xs" title="Test 3D" background="RoyalBlue" renderer="webgl">

	<resources>	
	
		<json_model id="model_1" src="model/female02/Female02_slim.js"/>
		<json_model src="model/male02/Male02_slim.js"/>
		
	</resources>
		
	<scene>			
		
		<camera id="camera_1" fov="75" aspect="1.5" near="1" far="100000">
			<position z="500"/>            
		</camera>
		
		<ambient_light id="a_ligth" color="Salmon"/>
		
		<directional_light id="d_ligth_1" color="Ivory">			
            <position y="-70" z="100"/>            
		</directional_light>
				
		<model id="male_model" src="model/male02/Male02_slim.js">
			<position x="120"  y="-350" z="-350"/>
			<scale x="4" y="4" z="4"/>
		</model>		
		
		<model id="female_model" src="model_1">
			<position x="-110"  y="-350" z="-350"/>
			<scale x="4" y="4" z="4"/>
		</model>
				
	</scene>
	
</application>
