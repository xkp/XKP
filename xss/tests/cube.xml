<application src="cube.xs" title="Test 3D" renderer="canvas" background="#f0f0f0">

	<resources>	
	
		<composite_material id="materials">
			<basic_material color="Math.random() * 0xffffff"/>
			<basic_material color="Math.random() * 0xffffff"/>
			<basic_material color="Math.random() * 0xffffff"/>
			<basic_material color="Math.random() * 0xffffff"/>
			<basic_material color="Math.random() * 0xffffff"/>
			<basic_material color="Math.random() * 0xffffff"/>
		</composite_material>
		<basic_material id="plane_material" color="14737632"/>
		<face_material id="cube_faces"/>
		
	</resources>
	
	<scene>	
	
		<camera id="camera_1" fov="70" aspect="1.5" near="1" far="1000">
			<position y="300" z="500"/>			
		</camera>
			
		<cube id="cube_1" width="200" height="200" depth="200" segments_width="1" 
				segments_height="1" segments_depth="1" cube_material="materials" material="cube_faces">			
			<position y="150"/>			
		</cube>
		
		<plane id="plane_1" width="200" height="200" material="plane_material">
			<rotation x="-1.57"/>		
		</plane>
		
	</scene>
			
</application>
