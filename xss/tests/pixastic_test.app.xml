<application src="pixastic_test.app.xs" >

	<resources>
		<image src="images/test1.png"/>
		<image id="image0" src="images/test3.png"/>
        <image id="image1" src="images/test2.png">    
			<brightness id="bfres" brightness="80" contrast="0.8"/>
		</image>
    </resources>
	
	<materials>
		<basic_material id="sphere_material" src="images/test1.png">
			<brightness id="bf0" brightness="80" contrast="0.8"/>
		</basic_material>
	</materials>
    <label id="lbl0" x="50" y="20" font="12px Arial" caption="Brightness and contrast filter demo"/>
	<label id="lbl1" x="50" y="40" font="12px Arial" caption="Pass mouse over the Gioconda's elements to change their filter values"/>
	<label id="lbl2" x="50" y="60" font="12px Arial" caption="Press numpad + and - to increase or decrease resource filter values"/>
	<img id="img1" x="50" y="100" width="128" height="164" src="images/test1.png">		
		<flipv id="f1">
			<rect left="10" top="40" width="60" height="80"/>
		</flipv>
	</img>
	<img id="img2" x="50" y="450" width="60" height="100" src="images/test2.png"/>
	<img id="img3" x="150" y="450" width="60" height="100" src="images/test2.png"/>
	<img id="img4" x="250" y="450" width="60" height="100" src="images/test2.png"/>
	<scene>
		<camera id="camera_1" fov="45" aspect="1.5" near="1" far="10000">
			<position z="1000"/>			
		</camera>	  
		<plane id="plane1" width="280" height="320" texture="images/test1.png">
			<position x="-30"/>
			<rotation y="-10"/>
			<brightness id="bf2" brightness="80" contrast="0.8"/>				
		</plane>
		<sphere id="sphere1" radius="150" material="sphere_material">
			<position x="400" y="-100"/>			
		</sphere>	
		<sphere id="sphere2" radius="150" material="sphere_material">
			<position x="400" y="200"/>			
		</sphere>
		<plane id="plane2" width="100" height="100" texture="images/test2.png">
			<position x="-300" y="-30"/>
			<rotation y="-10"/>			
		</plane>
	</scene>
</application>
